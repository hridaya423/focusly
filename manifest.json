{
  "manifest_version": 3,
  "name": "Focusly",
  "version": "1.0",
  "description": "Track and visualize your browsing habits",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "alarms",
    "notifications",
    "webNavigation",
    "idle"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "settings.html"
}